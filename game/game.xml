      <include name="../jdk-11!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_game.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.game, clean.artifact.game, clean.artifact.game:jar" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.game" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.game" value="${basedir}/out/artifacts/game"/>
    <property name="artifact.output.game:jar" value="${basedir}/out/artifacts/game_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.game" value="${artifacts.temp.dir}/game.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.11}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.game" description="clean game artifact output">
    <delete dir="${artifact.output.game}"/>
  </target>
  
  <target name="clean.artifact.game:jar" description="clean game:jar artifact output">
    <delete dir="${artifact.output.game:jar}"/>
  </target>
  
  <target name="artifact.game" depends="init.artifacts, compile.module.game" description="Build &#39;game&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.game}"/>
    <copy todir="${artifact.temp.output.game}">
      <fileset dir="${game.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_game" dir="${artifact.temp.output.game}" includes="**/*.jar">
      <exclude name="game.jar"/>
    </fx:fileset>
    <fx:fileset id="all_game" dir="${artifact.temp.output.game}" includes="**/*.jar"/>
    <fx:application id="game_id" name="game" mainClass="Main"/>
    <fx:jar destfile="${artifact.temp.output.game}/game.jar">
      <fx:application refid="game_id"/>
      <fileset dir="${artifact.temp.output.game}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_game"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value=""/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="always" outdir="${artifact.temp.output.game}/deploy" outfile="game" nativeBundles="exe">
      <fx:application refid="game_id"/>
      <fx:resources>
        <fx:fileset refid="all_game"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.game}">
      <fileset dir="${artifact.temp.output.game}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.game}"/>
    </delete>
  </target>
  
  <target name="artifact.game:jar" depends="init.artifacts, compile.module.game" description="Build &#39;game:jar&#39; artifact">
    <mkdir dir="${artifact.output.game:jar}"/>
    <copy todir="${artifact.output.game:jar}">
      <fileset dir="${game.output.dir}"/>
    </copy>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.game, artifact.game:jar" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>